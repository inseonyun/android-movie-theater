<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_theater_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="선릉 극장" />

        <TextView
            android:id="@+id/tv_theater_screening_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/theater_bottom_sheet_screening_time"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_theater_name"
            app:layout_constraintTop_toBottomOf="@id/tv_theater_name"
            tools:text="3개의 상영 시간" />

        <TextView
            android:id="@+id/btn_theater_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theater_bottom_sheet_button_next"
            android:textColor="@color/theater_bottom_sheet_button_next"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
